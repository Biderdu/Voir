<div id="customer-fields" {% unless customer %}data-registration="true"{% endunless %}>
    {% form 'create_customer' %}
    <input type="hidden" name="shop" value="{{ shop.permanent_domain }}">
    <div class="fields"><!-- Fields loaded from server --></div>
    <div class="form-footer"></div>
    <script>
        var Customr = {
            baseUrl: "https://customr.heliumdev.com",
            {% if customer %}
            shopifyCustomer: {
                id: {{ customer.id }},
                token: {{ customer.metafields.customr_auth.token | json }}
            }
            {% endif %}
        };
    </script>
    <script src="https://cdn-customr.heliumdev.com/assets/v2/embed.js"></script>
    {% endform %}
</div>
<style>
  .customr-control {
    width: 100%;
    height: 45px;
    border: none;
    border-bottom: 1px solid #c8c9c7;
    padding: 15px 0 15px 0;
    font-family: "Helvetica";
    font-weight: 400;
    font-size: 14px;
    letter-spacing: 1px;
    line-height: 14px;
    color: #75787b;
    border-radius: 0;
  }
  
  .customr-control { outline: none; }
  
  .customr-control-label {
    display: none !important;
  }
  
  .btn {
    height: 45px;
    width: 350px;
    font-family: "Helvetica-Bold";
    font-weight: 400;
    font-size: 13px;
    letter-spacing: 0.015em;
    color: #53565a;
    background: #ffffff;
    border: 1px solid #53565a;
    transition: color 0.4s ease, background 0.4s ease;
  }
</style>
